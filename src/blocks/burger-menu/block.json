{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "virginia/burger-menu",
	"version": "0.1.0",
	"title": "Burger Menu",
	"category": "design",
	"icon": "menu",
	"description": "A customizable hamburger menu for your site.",
	"example": {},
	"parent": [ "core/navigation" ],
	"attributes": {
		"classMode": {
			"type": "string",
			"default": "squeeze"
		},
		"paddingX": {
			"type": "number",
			"default": 15
		},
		"paddingY": {
			"type": "number",
			"default": 15
		},
		"layerWidth": {
			"type": "number",
			"default": 40
		},
		"layerHeight": {
			"type": "number",
			"default": 4
		},
		"layerSpacing": {
			"type": "number",
			"default": 6
		},
		"layerColor": {
			"type": "string",
			"default": "#000"
		},
		"borderRadiusBurger": {
			"type": "number",
			"default": 4
		},
		"hoverOpacity": {
			"type": "number",
			"default": 1
		},
		"activeLayerColor": {
			"type": "string",
			"default": null
		},
		"activeHoverOpacity": {
			"type": "number",
			"default": 1
		},
		"useHoverFilter": {
			"type": "boolean",
			"default": false
		},
		"hoverFilter": {
			"type": "string",
			"default": ""
		},
		"activeHoverFilter": {
			"type": "string",
			"default": ""
		},
		"zIndex": {
			"type": "number",
			"default": 1
		}
	},
	"supports": {
		"anchor": true,
		"alignWide": true,
		"html": false
	},
	"textdomain": "virginia",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js"
}